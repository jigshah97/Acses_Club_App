<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <ImageView
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:id="@+id/idpost_Image"
            android:background="@mipmap/ic_add_a_photo_black_48dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idpost_title"
            android:text="Post Title"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#000000"
            />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idpost_description"
                    android:text="post description!!!!!!!"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    />

        <TextView
            android:text="UserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            android:textSize="13dp"
            android:id="@+id/idpost_userName" />

        <TextView
            android:text="PostDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textStyle="normal"
            android:textAlignment="viewEnd"
            android:id="@+id/idpost_Date" />
    </LinearLayout>
</android.support.v7.widget.CardView>